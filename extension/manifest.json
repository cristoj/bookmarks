{
  "manifest_version": 3,
  "name": "Cristoj Bookmarks",
  "version": "1.0.0",
  "description": "Save and organize your favorite web pages instantly",
  "author": "Cristo",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Save Bookmark"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "activeTab",
    "storage"
  ],

  "host_permissions": [
    "https://*.firebaseapp.com/*",
    "https://*.cloudfunctions.net/*",
    "https://*.googleapis.com/*"
  ]
}
